{
  "name": "@latanda/smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the La Tanda cooperative financial ecosystem",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:testnet": "hardhat run scripts/deploy.js --network hondurasTestnet",
    "deploy:honduras": "hardhat run scripts/deploy.js --network honduras",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:bsc": "hardhat run scripts/deploy.js --network bsc",
    "verify:testnet": "hardhat verify-contracts --targetNetwork hondurasTestnet --deployment deployments/hondurasTestnet-deployment.json",
    "verify:honduras": "hardhat verify-contracts --targetNetwork honduras --deployment deployments/honduras-deployment.json",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat contract-size",
    "flatten": "hardhat flatten",
    "setup:governance": "hardhat setup-governance --targetNetwork honduras",
    "distribute:tokens": "hardhat distribute-tokens --targetNetwork hondurasTestnet --amount 1000",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "docs": "hardhat docgen",
    "prepare": "npm run compile"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "defi",
    "dao",
    "honduras",
    "cooperative",
    "tanda",
    "finance"
  ],
  "author": "La Tanda Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "chai": "^4.3.7",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/latanda/smart-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/latanda/smart-contracts/issues"
  },
  "homepage": "https://latanda.online",
  "files": [
    "contracts",
    "artifacts",
    "deployments",
    "scripts"
  ]
}
