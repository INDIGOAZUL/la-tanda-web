# ============================================================================
# La Tanda Database Backup Configuration
# ============================================================================
# Copy this file to .env.backup and configure your settings
# Usage: cp env.backup.example .env.backup

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_NAME=latanda_db
DB_USER=latanda_user
DB_HOST=localhost
DB_PORT=5432
DB_PASSWORD=your_secure_password_here

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_DIR=/var/backups/latanda
RETENTION_DAYS=30
LOG_DIR=/var/log/latanda

# ============================================================================
# CLOUD STORAGE CONFIGURATION (Optional - for +25 LTD bonus)
# ============================================================================
ENABLE_CLOUD_UPLOAD=false
CLOUD_PROVIDER=s3

# AWS S3 Configuration
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1

# Google Cloud Storage Configuration
GCS_BUCKET=your-gcs-bucket-name

# ============================================================================
# EMAIL NOTIFICATION CONFIGURATION (Optional)
# ============================================================================
ENABLE_EMAIL=false
EMAIL_TO=admin@latanda.com
EMAIL_FROM=backup@latanda.com
SMTP_SERVER=localhost
